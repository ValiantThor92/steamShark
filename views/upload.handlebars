<div class="border-box">
<h2> Upload Images </h2>

{{!-- Allows the user to upload images, and it is stored in local image folders--}}
<form enctype="multipart/form-data" class="upload-form" id="imgId" method="post">
  <div>
    <label>Upload a photo to add to your album</label>
  </div>
  <div>
    <input id="imgPost" type="submit" value="upload" class="btn btn-primary custom-btn submit-up">
    <input type="file" name="image">
  </div>
</form>
</div>

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script type="text/javascript">
$(document).ready(function (e) {
    $('#imgId').on('submit',(function(e) {
        e.preventDefault();
        var formData = new FormData(this);

        $.ajax({
            type:'POST',
            url: "/api/images/album",
            data:formData,
            cache:false,
            contentType: false,
            processData: false,
            success:function(data){
                console.log("success");
                console.log(data);
            },
            error: function(data){
                console.log("error");
                console.log(data);
            }
        });
        document.location.reload();
    }));

    $("#ImgPost").on("change", function() {
        $("#imgId").submit();
    });
});
</script>