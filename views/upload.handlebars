<form class="login-form custom-login-signup">
<h2> Upload Images </h2>

{{!-- Allows the user to upload images, and it is stored in local image folders--}}
<form method = "POST" action="/api/images/" enctype="multipart/form-data" class="upload-form">
  <div>
    <label>Upload a photo to add to your album</label>
    <input type="file" name="image">
  </div>
  <div>
    <input type="submit" value="upload" class="btn btn-primary custom-btn">
  </div>
</form>
</form>